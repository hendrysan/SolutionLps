@model Solution.Models.DocumentListResponse
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Documents</h1>
            <p>Upload a new document: <a href="@Url.Action("Upload","Document")"> Click Here</a></p>
            <p>Here are the documents you have access to:</p>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Size</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var document in Model.Documents)
                    {
                        <tr>
                            <td>@document.FileName</td>
                            <td>@document.FileSize</td>
                            <td>
                                @* <a href="@Url.Action("Download", "Document", new { id = document.Id })">Download</a> *@
                                <a href="@document.Path" target="_blank">Download</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
