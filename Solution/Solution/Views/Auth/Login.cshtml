@model Solution.Models.LoginRequest
@{
    Layout = "_Layout";
}

<form class="theme-form" method="post" asp-controller="Auth" asp-action="Login" needs-validation asp-route-returnurl="@ViewData["returnUrl"]">

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="col-form-label">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "jhon.doe@mail.com", @autofocus = "autofocus" })
    </div>

    <div class="form-group">
        <label class="col-form-label">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "********" })
    </div>

    <br
    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">Login</button>
        <a href="@Url.Action("Register")">Register</a>
    </div>

</form>
